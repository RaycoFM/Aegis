<div class="container p-2">
  <div class="row">
    <div class="col-md-3 m-5 mx-auto" style="padding-top: 1em;">
        <div class="card text-center">

            <div class="card card-body card_hijo" >
                    <h2>ADD NEW USER</h2>
                
                <div class="card card-body card_hijo">
                    <form action="/signup" method="POST">
                    
                     <div class="form-group p-2">
                         <input type="text" name="username" placeholder="User Name" class="form-control" autofocus>
                     </div>

                     <div class="form-group p-2">
                         <input type="text" name="idjugador" placeholder="Id Jugador" class="form-control">
                     </div>

                     <div class="form-group p-2">
                         <input type="password" name="password" placeholder="Password" class="form-control">
                     </div>

                     <div class="form-group p-2">
                         <h5><input type="checkbox" name="admin" value="first_checkbox"> Admin</h5>
                     </div>

                     <div class="form-group p-2">
                         <h1><button class="btn btn-success w-100">ADD</button></h1>
                     </div>
                     
                    </form>
                </div>
            </div>
        </div>
    </div>

     <div class="col-md-5 m-5 mx-auto" style="padding-top: 1em;">
      <div class="card text-center">

        <div class="card card-body card_hijo" >
                    <h2>ADD NEW HERO</h2>
                
                <div class="card card-body card_hijo">
                    <form action="/addhero" method="POST">
                    
                     <div class="form-group p-2">
                         <input type="text" name="heroname" placeholder="Hero Name" class="form-control" autofocus>
                     </div>


                        <div class="card-body btn-group card_hijo  m-0 p-0 " role="group" aria-label="Basic example" style="width: 100%;"> 

                            <div class="card-body btn-group m-0 p-0 card-elder w-50" role="group" aria-label="Basic example" >
                            <ul class="list-group list-group w-75">
                                <h5>Class</h5>
                                <select name="clas">
                                    <option value="Ranger">Ranger</option>
                                    <option value="Mage"> Mage</option>
                                    <option value="Support">Support</option>
                                    <option value="Tank">Tank</option>
                                    <option value="Warrior">Warrior</option>
                                </select>
                            </ul>
                            </div>

                            <div class="card-body btn-group m-0 p-0 card-elder w-50" role="group" aria-label="Basic example" >
                            <ul class="list-group list-group  w-75">
                                <h5>Faction</h5>
                                <select name="faction">
                                    <option value="Lightbearer">Lightbearer</option>
                                    <option value="Wilder">Wilder</option>
                                    <option value="Graveborn">Graveborn</option>
                                    <option value="Mauler">Mauler</option>
                                    <option value="Celestial">Celestial</option>
                                    <option value="Hypogean">Hypogean</option>
                                    <option value="Dimensional">Dimensional</option>
                                </select>
                            </ul>
                            </div>

                        </div>
                        <p>

                        <div class="card-body btn-group card_hijo  m-0 p-0 " role="group" aria-label="Basic example" style="width: 100%;"> 

                            <div class="card-body btn-group m-0 p-0 card-elder w-50" role="group" aria-label="Basic example" >
                            <ul class="list-group list-group w-75">
                                <h5>Roll</h5>
                                <select name="roll">
                                    <option value="AoE">AoE</option>
                                    <option value="Assassin">Assassin</option>
                                    <option value="Buffer">Buffer</option>
                                    <option value="Burst_Damage">Burst Damage</option>
                                    <option value="Continuous_Damage">Continuous Damage</option>
                                    <option value="Control">Control</option>
                                    <option value="Debuffer">Debuffer</option>
                                    <option value="Regen">Regen</option>
                                    <option value="Tank">Tank</option>
                                </select>
                            </ul>
                            </div>

                            <div class="card-body btn-group m-0 p-0 card-elder w-50" role="group" aria-label="Basic example" >
                            <ul class="list-group list-group w-75">
                                <h5>Attribute</h5>
                                <select name="attribute">
                                    <option value="Agility">Agility</option>
                                    <option value="Intelligence">Intelligence</option>
                                    <option value="Strength">Strength</option>
                                </select>
                            </ul>
                            </div>
                        </div>




                     <div class="form-group p-2">
                         <h1><button class="btn btn-success w-100">ADD</button></h1>
                     </div>
                     
                    </form>
                </div>
        </div>
     </div>
</div>
</div>